<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Day Tracker</title>
</head>

<body>
    <section class="container text-center">
        <section class="container text-center">
            <h1>Elisa's Day Tracker</h1>
        </section>
        <section class="jumbotron">
            <h1>Sunday</h1>
            <form id="issueInputForm" method="POST" action="/new">
                <div class="form-group text-left">
                    <label for="timeOfDay">Time of Day</label>
                    <select class="form-control" id="timeOfDay" name="timeOfDay">
                        <option value="Morning">Morning</option>
                        <option value="Afternoon">Afternoon</option>
                        <option value="Evening">Evening</option>
                        <option value="Choose Time of Day" selected>Choose Time of Day...</option>
                    </select>
                </div>
                <div class="form-group text-left">
                    <label for="bloodPressure">Blood Pressure</label>
                    <input type="text" class="form-control" id="bloodPressure" name="bloodPressure" placeholder="Blood Pressure...">
                </div>
                <div class="form-group text-left">
                    <label for="severity">Severity</label>
                    <select class="form-control" id="severity" name="severity">
                        <option value="Low">Low</option>
                        <option value="Medium" selected>Medium</option>
                        <option value="High">High</option>
                    </select>
                </div>
                <div class="form-group text-left">
                    <label for="assignedTo">User</label>
                    <select class="form-control" id="assignedTo" name="assignedTo">
                        <option value="George">George</option>
                        <option value="Danny">Danny</option>
                        <option value="Nurse">Nurse</option>
                        <option value="Eduardo" selected>Eduardo</option>
                    </select>    

                </div>
                <button type="submit" class="btn btn-warning">Add</button>
            </form>
        </section>
        <section class="row">
            <div class="col-lg-12">
                <div id="issuesList">
                    <% ticketList.forEach(tickets => { %>
                        <div class = "well">
                            <h5>Date: <%=tickets.date%></h5>
                            <p><span class="label <%=tickets.status== 'Medication Not Taken' ? 'label-success' : 'label-info'%>"><%=tickets.status%></span></p>
                            <h3><%=tickets.timeOfDay%></h3>
                            <h2><%=tickets.bloodPressure%></h2>
                            <p><span class="glyphicon glyphicon-time"></span><%=tickets.severity%><span class="glyphicon glyphicon-user"></span><%=tickets.assignedTo%></p>
                            <a href="/edit/<%=tickets._id%>" class="btn btn-warning">Gave Medication</a>
                            <a href="/edit/remove/<%=tickets._id%>" class="btn btn-danger">Delete</a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </section>
    </section>
</body>